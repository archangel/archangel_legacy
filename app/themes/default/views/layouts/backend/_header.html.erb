<header class="app-header navbar">
  <button class="navbar-toggler mobile-sidebar-toggler d-lg-none mr-auto" type="button">
    <span class="navbar-toggler-icon"></span>
  </button>

  <a class="navbar-brand" href="<%= backend_root_path %>">
    <span class="d-lg-none"><%= image_tag(current_site.logo.tiny.url, alt: current_site.name) %></span>
    <span class="d-md-down-none align-middle"><%= current_site.name %></span>
  </a>

  <button class="navbar-toggler sidebar-toggler d-md-down-none" type="button">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="btn-group ml-auto" role="toolbar" aria-label="Toolbar">
    <a class="nav-link" href="<%= root_path %>">
      <span class="d-md-down-none"><%= Archangel.t(:website) %></span>
    </a>

    <a class="nav-link" href="<%= backend_profile_path %>">
      <span class="d-md-down-none"><%= Archangel.t(:profile) %></span>
    </a>

    <a class="nav-link" data-method="delete" href="<%= destroy_user_session_path %>" rel="nofollow">
      <span class="d-md-down-none"><%= Archangel.t(:logout) %></span>
    </a>
  </div>
</header>
