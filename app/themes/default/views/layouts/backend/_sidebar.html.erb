<div class="sidebar">
  <nav class="sidebar-nav">
    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link" href="<%= backend_root_path %>"><%= Archangel.t(:dashboard) %></a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="<%= backend_pages_path %>"><%= Archangel.t(:pages) %></a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="<%= backend_collections_path %>"><%= Archangel.t(:collections) %></a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="<%= backend_widgets_path %>"><%= Archangel.t(:widgets) %></a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="<%= backend_assets_path %>"><%= Archangel.t(:assets) %></a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="<%= backend_templates_path %>"><%= Archangel.t(:templates) %></a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="<%= backend_users_path %>"><%= Archangel.t(:users) %></a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="<%= backend_site_path %>"><%= Archangel.t(:site) %></a>
      </li>

      <% if current_site.collections.present? %>
        <% current_site.collections.each_with_index do |item, index| %>
          <% if item.persisted? %>
            <% if index.zero? %>
              <li class="nav-title">
                <%= Archangel.t(:collections) %>
              </li>
            <% end %>

            <li class="nav-item">
              <a class="nav-link" href="<%= backend_collection_entries_path(item) %>"><%= item.name %></a>
            </li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </nav>

  <button class="sidebar-minimizer brand-minimizer" type="button"></button>
</div>
