<!doctype html>
<html dir="<%= text_direction %>" lang="<%= locale %>">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= content_for?(:title) ? yield(:title) : Archangel.t(:archangel) %></title>

    <link rel="shortcut icon" href="<%= current_site.favicon.url %>">

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "#{current_theme}/backend", media: "all" %>
    <%= yield(:stylesheet) if content_for?(:stylesheet) %>

    <% if protect_against_forgery? %>
     <script type="text/javascript" charset="utf-8">
      //<![CDATA[
        window._auth_token_name = '<%= request_forgery_protection_token %>';
        window._auth_token = '<%= form_authenticity_token %>';
      //]]>
     </script>
    <% end %>
  </head>

  <body class="app header-fixed sidebar-fixed aside-menu-fixed aside-menu-hidden">
    <%= render "layouts/backend/header" %>

    <div class="app-body">
      <%= render "layouts/backend/sidebar" %>

      <main class="main">
        <%= render "archangel/shared/flash_messages" %>

        <%= yield %>
      </main>
    </div>

    <%= render "layouts/backend/footer" %>

    <%= javascript_include_tag "#{current_theme}/backend" %>
    <%= yield(:javascript) if content_for?(:javascript) %>
  </body>
</html>
