<tr class="template-<%= template.status %>">
  <td><%= template.name %></td>
  <td><%= template.partial? %></td>
  <td class="actions text-right">
    <%= link_to(Archangel.t(:show), backend_template_path(template), class: "btn btn-info btn-sm") %>
    <%= link_to(Archangel.t(:edit), edit_backend_template_path(template), class: "btn btn-warning btn-sm") %>
    <%= link_to(Archangel.t(:destroy), backend_template_path(template), class: "btn btn-danger btn-sm",
                                                                        method: :delete,
                                                                        data: { confirm: Archangel.t(:are_you_sure) }) %>
  </td>
</tr>
