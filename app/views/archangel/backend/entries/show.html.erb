<div class="card card-default">
  <div class="card-body">
    <h2><%= Archangel.t(:show_resource, resource: @collection.name.singularize) %></h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="collections-show card card-default">
  <div class="card-body">
    <%- fields = @collection.fields.map { |item| item.slug } %>

    <% fields.each do |field| %>
      <p>
        <strong><%= field %>:</strong>
        <%= @entry.value[field] %>
      </p>
    <% end %>
  </div>
</div>
