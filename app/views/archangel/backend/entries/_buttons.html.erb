<div class="btn-group pull-right" role="group" aria-label="Button group">
  <% if member_action? || new_action? %>
    <%= link_to(fa_icon("chevron-left", text: Archangel.t(:back)), backend_collection_entries_path(@collection), class: "btn btn-link btn-float") %>
  <% end %>

  <% if collection_action? || show_action? || edit_action? %>
    <%= link_to(fa_icon("plus", text: Archangel.t(:new)), new_backend_collection_entry_path(@collection), class: "btn btn-link btn-float") %>
  <% end %>

  <% if show_action? %>
    <%= link_to(fa_icon("check", text: Archangel.t(:edit)), edit_backend_collection_entry_path(@collection, @entry), class: "btn btn-link btn-float") %>
  <% end %>

  <%= link_to(fa_icon("folder-open", text: Archangel.t(:collection)), backend_collection_path(@collection), class: "btn btn-link btn-float") %>

  <% if show_action? || edit_action? %>
    <%= link_to(fa_icon("times", text: Archangel.t(:destroy)), backend_collection_entry_path(@collection, @entry), class: "btn btn-link btn-float",
                                     method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %>
  <% end %>
</div>
