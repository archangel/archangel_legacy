<%= simple_form_for([:backend, user]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :username %>
    <%= f.input :email, as: :email %>

    <div class="form-group user_avatar_image">
      <div class="col-sm-10 col-sm-offset-2">
        <%= image_tag(f.object.avatar.small.url, alt: "") %>
      </div>
    </div>

    <%= f.input :avatar_cache, as: :hidden %>
    <%= f.input(:remove_avatar, as: :boolean, checked_value: true, unchecked_value: false) if f.object.avatar? %>

    <%= f.input :role, as: :select %>
  </div>

  <div class="form-actions text-right">
    <%= f.button :submit %>
  </div>
<% end %>
