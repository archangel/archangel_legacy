<div class="card card-default">
  <div class="card-body">
    <h2><%= Archangel.t(:show_resource, resource: @user.model_name.human.titleize) %></h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="users-show card card-default">
  <div class="card-body">
    <%= image_tag(@user.avatar.small.url, alt: @user.username) %>

    <p>
      <strong><%= Archangel.t(:name) %>:</strong>
      <%= @user.name %>
    </p>

    <p>
      <strong><%= Archangel.t(:username) %>:</strong>
      <%= @user.username %>
    </p>

    <p>
      <strong><%= Archangel.t(:email) %>:</strong>
      <%= @user.email %>
    </p>
  </div>
</div>
