<ul class="nav nav-pills pull-right">
  <% if member_action? || new_action? %>
    <li><%= link_to(fa_icon("chevron-left", text: Archangel.t(:back)), backend_users_path) %></li>
  <% end %>

  <% if collection_action? || show_action? || edit_action? %>
    <li><%= link_to(fa_icon("plus", text: Archangel.t(:new)), new_backend_user_path) %></li>
  <% end %>

  <% if show_action? %>
    <li><%= link_to(fa_icon("check", text: Archangel.t(:edit)), edit_backend_user_path(@user)) %></li>
  <% end %>

  <% if show_action? || edit_action? %>
    <li><%= link_to(fa_icon("times", text: Archangel.t(:destroy)), backend_user_path(@user),
                                     method: :delete, data: { confirm: Archangel.t(:are_you_sure) }) %></li>
  <% end %>
</ul>
