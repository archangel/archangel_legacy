<div class="btn-group pull-right" role="group" aria-label="Button group">
  <% if member_action? || new_action? %>
    <%= link_to(Archangel.t(:back), backend_collections_path, class: "btn btn-link", role: "button") %>
  <% end %>

  <% if collection_action? || show_action? || edit_action? %>
    <%= link_to(Archangel.t(:new), new_backend_collection_path, class: "btn btn-link", role: "button") %>
  <% end %>

  <% if show_action? %>
    <%= link_to(Archangel.t(:edit), edit_backend_collection_path(@collection), class: "btn btn-link", role: "button") %>
  <% end %>

  <% if show_action? || edit_action? %>
    <%= link_to(Archangel.t(:entries), backend_collection_entries_path(@collection), class: "btn btn-link", role: "button") %>

    <%= link_to(Archangel.t(:destroy), backend_collection_path(@collection), class: "btn btn-link",
                                                                             role: "button",
                                                                             method: :delete,
                                                                             data: { confirm: Archangel.t(:are_you_sure) }) %>
  <% end %>
</div>
