<%= simple_form_for([:backend, collection], html: { autocomplete: "false" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :slug %>

    <div class="form-group collection_fields">
      <h3><%= Archangel.t(:fields) %></h3>

      <%= f.simple_fields_for :fields do |field| %>
        <%= render "field_fields", f: field %>
      <% end %>

      <div class="links">
        <%= link_to_add_association Archangel.t(:add_field), f, :fields %>
      </div>
    </div>
  </div>

  <div class="form-actions text-right">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
