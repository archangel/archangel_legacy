<div class="card card-default">
  <div class="card-body">
    <h2><%= Archangel.t(:show_resource, resource: @widget.model_name.human.titleize) %></h2>

    <%= render "buttons" %>
  </div>
</div>

<div class="widgets-show card card-default">
  <div class="card-body">
    <p>
      <strong><%= Archangel.t(:name) %>:</strong>
      <%= @widget.name %>
    </p>

    <p>
      <strong><%= Archangel.t(:slug) %>:</strong>
      <%= @widget.slug %>
    </p>

    <p>
      <strong><%= Archangel.t(:content) %>:</strong>
      <%= @widget.content %>
    </p>
  </div>
</div>
