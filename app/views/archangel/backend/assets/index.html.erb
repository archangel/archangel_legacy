<div class="card card-default">
  <div class="card-body">
    <h2><%= Archangel.t(:index_resource, resource: @assets.model_name.human.titleize) %></h2>
  </div>
</div>

<div class="card assets-index">
  <div class="card-header">
    <%= render "buttons" %>
  </div>

  <div class="card-body">
    <% if @assets.present? %>

      <div class="table-responsive text-nowrap">
        <table class="table table-hover table-bordered table-striped">
          <thead>
            <tr>
              <th scope="col"><%= Archangel.t(:file) %></th>
              <th scope="col"><%= Archangel.t(:file_name) %></th>
              <th scope="col" class="d-none d-lg-table-cell"><%= Archangel.t(:content_type) %></th>
              <th scope="col" class="d-none d-lg-table-cell"><%= Archangel.t(:file_size) %></th>
              <th class="actions text-right" scope="col"><%= Archangel.t(:actions) %></th>
            </tr>
          </thead>

          <tbody>
            <%= render partial: "asset", collection: @assets %>
          </tbody>
        </table>
      </div>

      <%= paginate @assets %>

    <% else %>

      <p class="no-resources">
        <%= Archangel.t(:no_resources, resources: @assets.model_name.human.pluralize.downcase) %>
      </p>

    <% end %>
  </div>
</div>
