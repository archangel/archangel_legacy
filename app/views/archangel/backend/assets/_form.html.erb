<%= simple_form_for([:backend, asset], html: { autocomplete: "false" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :file_name %>
    <%= f.input :file, as: :file %>
    <%= f.input :file_cache, as: :hidden %>

    <% if f.object.persisted? %>
      <div class="form-group asset_file_object">
        <div class="col-sm-10 col-sm-offset-2">
          <%= f.object.file %>

          <% if f.object.file.image? %>
            <div>
              <%= image_tag(f.object.file.small.url, alt: "") %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-actions text-right">
    <%= f.button :submit %>
  </div>
<% end %>
