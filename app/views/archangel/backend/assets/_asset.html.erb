<tr>
  <td><%= image_tag(asset.file.tiny.url, alt: asset.file_name) %></td>
  <td><%= asset.file_name %></td>
  <td class="d-none d-lg-table-cell">
    <%= asset.content_type %>
  </td>
  <td class="d-none d-lg-table-cell">
    <%= number_to_human_size(asset.file_size) %>
  </td>
  <td class="actions text-right">
    <%= link_to(Archangel.t(:show), backend_asset_path(asset), class: "btn btn-info btn-sm") %>
    <%= link_to(Archangel.t(:edit), edit_backend_asset_path(asset), class: "btn btn-warning btn-sm") %>
    <%= link_to(Archangel.t(:destroy), backend_asset_path(asset), class: "btn btn-danger btn-sm d-none d-md-inline-block",
                                                                  method: :delete,
                                                                  data: { confirm: Archangel.t(:are_you_sure) }) %>
  </td>
</tr>
