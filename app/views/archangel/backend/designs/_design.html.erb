<tr class="design-<%= design.partial? ? "partial" : "full" %>">
  <td><%= design.name %></td>
  <td><%= design.partial? %></td>
  <td class="actions text-right">
    <%= link_to(Archangel.t(:show), backend_design_path(design), class: "btn btn-info btn-sm") %>
    <%= link_to(Archangel.t(:edit), edit_backend_design_path(design), class: "btn btn-warning btn-sm") %>
    <%= link_to(Archangel.t(:destroy), backend_design_path(design), class: "btn btn-danger btn-sm",
                                                                      method: :delete,
                                                                      data: { confirm: Archangel.t(:are_you_sure) }) %>
  </td>
</tr>
