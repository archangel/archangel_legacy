<div class="card card-default">
  <div class="card-body">
    <h2><%= fa_icon("user") %> <%= Archangel.t(:show_resource, resource: Archangel.t(:profile)) %></h2>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="card pages-index">
        <div class="card-header">
          <%= render "buttons" %>
        </div>

        <div class="card-body">
          <%= image_tag(@profile.avatar.small.url, alt: @profile.username) %>

          <p>
            <strong><%= Archangel.t(:name) %>:</strong>
            <%= @profile.name %>
          </p>

          <p>
            <strong><%= Archangel.t(:username) %>:</strong>
            <%= @profile.username %>
          </p>

          <p>
            <strong><%= Archangel.t(:email) %>:</strong>
            <%= @profile.email %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
